<%- include("partials/header.ejs") %>

<div class="container">
  <div class="edit-container">
    <div class="edit-header">
      <h1>Editar Post</h1>
      <p>Realiza cambios en tu post</p>
    </div>

    <form action="/edit/<%= post.id %>" method="POST" class="edit-form">
      <div class="form-group">
        <label for="title"> TÃ­tulo del Post </label>
        <input
          type="text"
          id="title"
          name="title"
          value="<%= post.title %>"
          required
        />
      </div>

      <div class="form-group">
        <p>Autor: <strong><%= post.author %></strong></p>
      </div>

      <div class="form-group">
        <label for="content"> Contenido </label>
        <textarea
          id="content"
          name="content"
          rows="8"
          required
        ><%= post.content %></textarea>
      </div>

      <div class="form-actions">
        <a href="/" class="btn btn-secondary"> Cancelar </a>
        <button type="submit" class="btn btn-primary">Actualizar Post</button>
      </div>
    </form>
  </div>
</div>

<%- include("partials/footer.ejs") %>