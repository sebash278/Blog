<%- include("partials/header.ejs") %>

<div class="container">
  <article class="post-detail">
    <div class="post-detail-image">
      <img src="<%= post.featuredImage || 'https://picsum.photos/800/400?random=' + post.id %>" 
           alt="<%= post.title %>"
           onerror="this.src='https://picsum.photos/800/400?random=<%= post.id %>'">
    </div>

    <div class="post-detail-content">
      <header class="post-detail-header">
        <h1 class="post-detail-title"><%= post.title %></h1>
        <div class="post-detail-meta">
          <span class="author">Por <%= post.author %></span>
          <span class="separator">•</span>
          <span class="date">
            <% 
              let displayDate = 'Fecha no disponible';
              try {
                if (post.createdAt) {
                  displayDate = new Date(post.createdAt).toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long', 
                    day: 'numeric'
                  });
                } else if (post.date) {
                  if (post.date.includes('/')) {
                    displayDate = post.date;
                  } else {
                    displayDate = new Date(post.date).toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    });
                  }
                }
              } catch (error) {
                displayDate = post.date || 'Fecha no disponible';
              }
            %>
            <%= displayDate %>
          </span>
        </div>
      </header>

      <div class="post-detail-body">
        <p><%= post.content %></p>
      </div>

      <div class="post-detail-actions">
        <div class="post-interactions">
          <% if (user) { %>
            <button 
              class="like-btn <%= post.likedBy && user && post.likedBy.includes(user.id) ? 'liked' : '' %>" 
              onclick="toggleLike(this)" 
              data-post-id="<%= post.id %>">
              
              <svg class="heart" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
              </svg>
              
              <span class="like-count"><%= post.likes || 0 %></span>
              <span class="like-text">Me gusta</span>
            </button>
          <% } else { %>
            <div class="like-display">
              <svg class="heart" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
              </svg>
              <span><%= post.likes || 0 %> me gusta</span>
            </div>
          <% } %>
        </div>

        <% if (user && user.username === post.author) { %>
          <div class="author-actions">
            <a href="/edit/<%= post.id %>" class="btn btn-outline btn-sm">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
              Editar
            </a>
            <form action="/delete/<%= post.id %>" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-sm" 
                      onclick="return confirm('¿Estás seguro de que quieres eliminar este post?')">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3,6 5,6 21,6"/>
                  <path d="M19,6l-1,14H6L5,6m5,0V4a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6"/>
                </svg>
                Eliminar
              </button>
            </form>
          </div>
        <% } %>
      </div>

      <div class="post-navigation">
        <a href="/" class="btn btn-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m19 12-7-7-7 7"/>
            <path d="M12 19V5"/>
          </svg>
          Volver al inicio
        </a>
      </div>
    </div>
  </article>
</div>

<script src="/js/main.js" defer></script>

<%- include("partials/footer.ejs") %>
